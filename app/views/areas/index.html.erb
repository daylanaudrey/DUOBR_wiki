<h1>Áreas</h1>
<table class="table table-hover">
  <tbody>
  	<% @areas.each do |area| %>
      <tr>
        <td><%= area.name %></td>
        <td><%= area.project&.name || "Nenhum projeto selecionado" %></td>
        <td><%= link_to 'Editar', edit_area_path(area), class:"btn btn-info btn-sm pull-right" %></td>
        <td><%= button_to "Remover", area, method: :delete, class: "btn btn-danger btn-sm pull-right", data: { confirm: "Tem certeza que deseja remover #{area.name}?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Nova Área', new_area_path, class:"btn btn-primary" %>