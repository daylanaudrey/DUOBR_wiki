<!DOCTYPE html>
<html>
<head>
  <title><%= titulo_sistema %></title>
  <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<header>
		<nav class="navbar navbar-default">
		  <div class="container-fluid">
		    <div class="navbar-header">
		      <a class="navbar-brand" href="<%= root_path %>"><%= titulo_sistema %></a>
		    </div>
		    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
		      <ul class="nav navbar-nav navbar-right">
						<% if user_signed_in? %>
			        <li><a href="<%= projects_path %>">Projetos</a></li>
			        <li><a href="<%= areas_path %>">√Åreas</a></li>
			        <li><a href="<%= tabelas_path %>">Tabelas</a></li>
			        <li><a href="<%= models_path %>">Modelos</a></li>						
							<li><a href="#">Desconectar</a></li>
						<% else %>
							<li><a href="#">Logar</a></li>
						<% end %>		        
		      </ul>
		    </div>
		  </div>
		</nav>
	</header>
	<div class="container">
		<% if flash[:notice] %>
			<div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
		<% end %>
		<% if flash[:alert] %>
			<div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
		<% end %>	
		<%= yield %>
	</div>
</body>
</html>